---
import { Image } from "astro:assets";
import logo from "../assets/images/logo-horizontal.svg";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="main-nav">
      <div class="nav-container">
        <a href="/" class="nav-logo">
          <Image src={logo} alt="Front-End Fire Logo" />
          <span class="nav-title">Front-End Fire</span>
        </a>
        <div class="nav-links">
          <a href="/about" class={`nav-link ${Astro.url.pathname === "/about" ? "current" : ""}`}>About</a>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --base-color: #3d3c40;
    --base-color-dark: #161619;
    --base-color-light: #86828d;
    --primary-color-light: #f48b45;
    --primary-color: #e7823f;
    --primary-color-dark: #bc5008;
    --off-white: #f5f5f5;
    --content-width: 90vw;
    --max-width: 70rem;
  }

  html {
    box-sizing: border-box;
    height: 100%;
    font-size: 100%;
    line-height: 1.5;
    background-color: var(--off-white);
    color: var(--base-color);
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    margin: 0;
    font-size: clamp(1rem, 1.25vw, 1.5rem);
    background-image: repeating-linear-gradient(
      45deg,
      #f4ede5 0,
      #f4ede5 1px,
      #f5f5f5 0,
      #f5f5f5 50%
    );
    background-size: 7px 7px;
  }

  main {
    flex-grow: 1;
    width: var(--content-width);
    max-width: var(--max-width);
    margin: 0 auto;
  }

  a {
    color: var(--base-color-dark);
    text-decoration: none;
    position: relative;
  }

  a:visited {
    color: var(--base-color-dark);
  }

  a:hover,
  a:focus,
  a:active {
    color: var(--base-color-dark);
    text-decoration: underline;
    text-underline-offset: 0.1em;
    text-decoration-thickness: 1px;
  }

  strong {
    font-weight: 400;
  }

  img {
    vertical-align: middle;
  }

  .section-heading {
    margin: 2rem 0 1rem;
    color: var(--base-color-dark);
    font-size: 1.8rem;
    text-decoration: underline;
    text-decoration-thickness: 0.15em;
    text-underline-offset: 0.2em;
    text-decoration-color: var(--primary-color);
    text-transform: uppercase;
  }

  h2 {
    color: var(--base-color-dark);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    text-decoration: underline;
    text-decoration-thickness: 0.15em;
    text-underline-offset: 0.2em;
    text-decoration-color: var(--primary-color);
    text-transform: uppercase;
  }

  h3 {
    color: var(--base-color-dark);
    font-size: 1.4rem;
    margin: 2rem 0 1rem 0;
  }

  h4 {
    color: var(--base-color-dark);
    font-size: 1.2rem;
    margin: 1.5rem 0 0.5rem 0;
    font-weight: 500;
  }

  .media-action {
    color: inherit;
    font-size: clamp(1rem, 0.875em, 0.875em);
    opacity: 0.8;
    white-space: nowrap;

    &:visited {
      color: inherit;
    }

    &:hover,
    &:focus,
    &:active {
      color: inherit;
      opacity: 1;
      text-decoration: none;
    }

    & svg {
      height: 1.25em;
      width: 1.25em;
      vertical-align: text-bottom;
    }

    & + .media-action {
      margin-left: 0.5em;
    }
  }

  .tag {
    display: inline-block;
    padding: 0 0.35em;
    background-color: var(--primary-color);
    color: var(--off-white);
    line-height: 1.4;
    border-radius: 4px;
    text-transform: none;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  .main-nav {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--base-color-light);
    background-image: repeating-linear-gradient(
      45deg,
      #f4ede5 0,
      #f4ede5 1px,
      #f5f5f5 0,
      #f5f5f5 50%
    );
    background-size: 7px 7px;
  }

  .nav-container {
    width: var(--content-width);
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    gap: 1rem;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nav-logo .nav-title {
    margin-left: 0.5rem;
  }

  .nav-logo img {
    height: 2.5rem;
    width: auto;
    transition: opacity 0.2s ease;
  }

  .nav-logo:hover img {
    opacity: 0.8;
  }

  .nav-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--base-color-dark);
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: var(--base-color);
    font-size: 1.1rem;
    padding: 0.25rem 0;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-link:visited {
    color: var(--base-color);
  }

  .nav-link.current {
    color: var(--base-color);
    text-decoration: underline;
    text-decoration-color: var(--primary-color);
    text-decoration-thickness: 2px;
    text-underline-offset: 0.2em;
  }

  .nav-link.current:visited {
    color: var(--base-color);
  }

  .nav-link.current:hover,
  .nav-link.current:focus,
  .nav-link.current:active {
    color: var(--primary-color);
    text-decoration: underline;
    text-decoration-color: var(--primary-color);
    text-decoration-thickness: 2px;
    text-underline-offset: 0.2em;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0.5rem 1rem;
    }

    .nav-logo img {
      height: 2rem;
    }

    .nav-title {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 1200px) {
    .nav-container {
      padding: 0 1rem;
    }
  }
</style>
